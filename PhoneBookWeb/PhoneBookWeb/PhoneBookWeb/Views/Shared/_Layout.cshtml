<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Noir.css")" rel="stylesheet" type="text/css" />
    <script href="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
</head>
<body>
	<span id="background"></span>
	<div id="page">
		<div id="sidebar">
			<div id="logo"><a>@RenderSection("Header")</a>

			</div> <!-- /#logo -->
			<ul id="navigation">
                <li><a href="images.html">@RenderSection("Home", false)</a></li>
                <li><a href="images.html">@RenderSection("About", false)</a></li>
				
			</ul> <!-- /#navigation -->
			<ul id="connect">
				<li><a href="http://facebook.com/" target="_blank" class="facebook"></a></li>
				<li><a href="http://twitter.com/" target="_blank" class="twitter"></a></li>
				<li><a href="" class="link-us"></a></li>
			</ul> <!-- /#connect -->
			<div class="footer">
                @Html.ActionLink((string)PhoneBookWeb.Resources.Resources.Language, "CultureChange")
                </br>
				&copy; Copyright &copy; 2013.<br/>
				<a href="index.html">Stazik.</a> all rights reserved.
			</div> <!-- /.footer -->
		</div> <!-- /#sidebar -->
		
		<div id="contents">
            @RenderSection("DetailHeader", false)
			<span class="header"></span>
			<ul class="images">
                @RenderBody()
			</ul>
		</div> <!-- /#contents -->
	</div> <!-- /#page -->
</body>
</html>
